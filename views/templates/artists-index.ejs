<!DOCTYPE html>
<html>
<head>
  <title><%= title %> | Artists</title>
  <link rel="icon" href="data:;base64,iVBORw0KGgo=">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
</head>
<body>
  <h1><%= title %> | Artists</h1>
  <a href="/artists/new/">Add New Artist</a>
  <table>
    <thead>
      <tr>
        <th>Artist</th>
        <th>Genre</th>
        <!-- <th>Album</th> -->
        <!-- <th>Bio</th> -->
      </tr>
    </thead>
    <tbody>
      <% artists.forEach(function (artist) { %>
        <tr>
          <td><%= artist.artist %></td>
          <td><%= artist.genre %></td>
          <td> <form action='/artists/delete/<%= artist._id %>' method="POST">
            <input type="submit" class="btn btn-danger" value="Delete">
            </form>
          </td>
          <!-- <td><%= artist._id %></td> -->
          <!-- <td><%= artist.album %></td> -->
          <!-- <td><%= artist.bio %></td> -->
        </tr>
      <% }); %>
    </tbody>
  </table>
  <%- include('javascripts') %>
</body>
</html>
